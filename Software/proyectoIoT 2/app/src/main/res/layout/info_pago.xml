<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:textColorHint="@android:color/darker_gray"
    app:layout_collapseMode="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="0.4"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivBackAñadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_circle"
                android:onClick="returnAyuda"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText

                            android:id="@+id/etNumTarjeta"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="@string/et_NumTarjeta"
                            android:inputType="number"
                            android:textColor="#020000"
                            android:textColorHint="#4E4646"
                            android:textSize="14dp"
                            android:verticalScrollbarPosition="defaultPosition"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="254dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etMes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/et_Mes"
                        android:inputType="number"
                        android:textColor="#020000"
                        android:textColorHint="#4E4646"
                        android:textSize="14dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <EditText
                        android:id="@+id/etAño"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/et_Año"
                        android:inputType="number"
                        android:textColor="#020000"
                        android:textColorHint="#4E4646"
                        android:textSize="14dp"
                        tools:layout_editor_absoluteX="144dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <EditText
                        android:id="@+id/etCVV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/et_CVV"
                        android:inputType="number"
                        android:textColor="#020000"
                        android:textColorHint="#4E4646"
                        android:textSize="14dp"
                        tools:layout_editor_absoluteX="272dp"
                        tools:layout_editor_absoluteY="312dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <EditText

                        android:id="@+id/etNombre"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/et_Nombre"
                        android:textColor="#020000"
                        android:textColorHint="#4E4646"
                        android:textSize="14dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="369dp" />

                    <EditText
                        android:id="@+id/etApellido"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/et_Apellido"
                        android:inputType="textPersonName"
                        android:textColor="#020000"
                        android:textColorHint="#4E4646"
                        android:textSize="14dp"
                        tools:layout_editor_absoluteX="211dp"
                        tools:layout_editor_absoluteY="369dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbAcepto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/tv_aceptoTarjeta"
                        android:textColor="#020000"
                        android:textColorHint="#4E4646"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="426dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnAddTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/boton_iniciosesion"
            android:enabled="false"
            android:fontFamily="@font/poppins_medium"
            android:onClick="guardarTarjeta"
            android:text="@string/btn_Verificar"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>