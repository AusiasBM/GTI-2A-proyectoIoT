<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Hola"
        android:textColor="@android:color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvParrafo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:shadowColor="#FFFFFF"
        android:textColor="@android:color/white"
        tools:text="Para poder pagar de forma sencilla por alquilar nuestras taquillas o patinetes puedes introducir las targetas de crédito que necesites con su número de tarjeta correspondiente y así poder pagar de forma automática" />

    <TextView
        android:id="@+id/tvParrafo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvParrafo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:text='No te cobraremos nada al reservar una de nuestras taquillas o patines, pero dispondrás tan solo de 15 minutos para llegar a una estación y alquilar. Cuando pulses en "¡Empieza" en cualquiera de nuestras taquillas se te cobrará por el tiempo que uses nuestros servicios'
        android:textColor="@android:color/white" />

</RelativeLayout>